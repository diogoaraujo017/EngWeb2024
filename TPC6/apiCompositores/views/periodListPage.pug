extends layout

block content
            
    .w3-card-4

        header.w3-container.w3-teal
            h1 
                span Period List
                a.w3-btn.w3-round.w3-grey(href="/periodos/registo") +
        
        div.w3-container
            table.w3-table-all
                tr
                    th Id
                    th Name
                        
                each period in slist
                    tr
                        td= period.id
                    
                        td 
                            a(href="/periodos/" + period.id)= period.nome
                                                   
                        td
                            a.w3-btn.w3-round.w3-blue(href="/periodos/edit/" + period.id) Edit 
                            a.w3-btn.w3-round.w3-red(href="/periodos/delete/" + period.id) Delete

  
        footer.w3-container.w3-teal
            address 
                span Generated by Diogo Ara√∫jo in #{date} - [
                a(href="/") Return
                span ]
                