extends layout

block content

    .w3-card-4
        header.w3-container.w3-teal
            h2 
                span Composer Form
         
        form.w3-container(method="POST")
            fieldset
                legend Metadata 
                
                label Id
                input.w3-input.w3-round(type="text" name="id" readonly value=composer.id)
        
                label Name
                input.w3-input.w3-round(type="text" name="nome" value=composer.nome)

                legend Period
                select.w3-select(name="periodo")
                    option(value=composer.periodo) #{composer.periodo}

                    each period in periods
                        if (period.nome != composer.periodo)
                            option(value=period.nome) #{period.nome}
                
                    
                label Biography
                input.w3-input.w3-round(type="text" name="biografia" value=composer.bio)
        
                label Birth date
                input.w3-input.w3-round(type="date" name="nascimento" value=composer.dataNasc)

                label Death date
                input.w3-input.w3-round(type="date" name="morte" value=composer.dataObito)
         
            br
            button.w3-btn.w3-teal.w3-mb-2(type="submit") Register

    br
    footer.w3-container.w3-teal
        h5 
            span Generated by Diogo Ara√∫jo in #{date} - [
            a(href="/compositores") Return
            span ]