extends layout

block content
            
    .w3-card-4
        header.w3-container.w3-teal
            h2 Period Form
                         
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="id" readonly value=periodo.id)

                label Name
                input.w3-input.w3-round(type="text" name="nome" value=periodo.nome)
                
                label Description
                input.w3-input.w3-round(type="text" name="desc" value=periodo.desc)
                                   
                br
                button.w3-btn.w3-teal.w3-mb-2(type="submit") Register
                
                footer.w3-container.w3-teal
                    h5 
                        span Generated by Diogo Ara√∫jo in #{date} - [
                        a(href="/periodos") Return
                        span ]
                