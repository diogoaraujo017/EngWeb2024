extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h2
                span Composer Form
            
        form.w3-container(method="POST")
            fieldset
                legend Metadata    
                label Id (Ex: C2345)
                input.w3-input.w3-round(type="text" name="id" required)
                label Name
                input.w3-input.w3-round(type="text" name="nome" required)
                        
                legend Period
                select.w3-select(name="periodo")
                    - periodValue = "Select Period"
                    option(value="Undefined") #{periodValue}

                    each period in periods
                        option(value=period.nome) #{period.nome}
                        
                label Biography
                input.w3-input.w3-round(type="text" name="bio")
                label Birth date
                input.w3-input.w3-round(type="date" name="dataNasc")
                label Death date
                input.w3-input.w3-round(type="date" name="dataObito")
                    
            br        
            button.w3-btn.w3-teal.w3-mb-2(type="submit") Register

        footer.w3-container.w3-teal
            h5
                span Generated by Diogo Ara√∫jo in #{date} - [
                a(href="/compositores") Return
                span ]
            